generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // (or MySQL, SQLite, etc.)
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  fullName String
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id Int @id @default(autoincrement())

  name     String
  imageURL String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 
}
